<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/widget_margin" >
    
    <LinearLayout
        android:layout_width="match_parent"
    	android:layout_height="wrap_content"
        android:orientation="horizontal" >
        
      <ImageButton
          android:id="@+id/widget_button_car"
          
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          
          android:background="@drawable/widget_item"
          android:contentDescription="@string/description_button_car" />
      
      <ImageButton
          android:id="@+id/widget_button_map"
          android:src="@drawable/ic_widget_map"
          
          android:layout_width="0dp"
          android:layout_weight="1"
          android:layout_height="match_parent"
          
          android:background="@drawable/widget_item"
          android:contentDescription="@string/description_button_map" />
      
      </LinearLayout>
      
      <TextView android:id="@+id/text_widget"
          style="@style/base_text_carlib"
          
          android:layout_height="wrap_content"
          android:layout_width="match_parent"
              
          android:textIsSelectable="true"
          android:ellipsize="end" />

</LinearLayout>